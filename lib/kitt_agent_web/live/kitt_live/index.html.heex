<div class="drawer lg:drawer-open">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />

  <div class="drawer-content flex flex-col bg-base-100 min-h-screen">
    <!-- Navbar -->
    <div class="navbar bg-base-100 border-b border-base-200 w-full sticky top-0 z-10">
      <div class="flex-none lg:hidden">
        <label for="my-drawer" aria-label="open sidebar" class="btn btn-square btn-ghost">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block w-6 h-6 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            >
            </path>
          </svg>
        </label>
      </div>
      <div class="flex-1">
        <a class="btn btn-ghost text-xl">{@page_title}</a>
      </div>
    </div>
    
<!-- Content -->
    <main class="p-6">
      <.flash kind={:info} title="Success!" flash={@flash} />
      <.flash kind={:error} title="Error!" flash={@flash} />
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">Listing Kitts</h1>
        <.link patch={~p"/kitt-web/kitts/new"} class="btn btn-primary">New Kitt</.link>
      </div>

      <div class="overflow-x-auto card bg-base-100 shadow-xl">
        <table class="table table-zebra">
          <thead>
            <tr>
              <th>Name</th>
              <th>Model</th>
              <th>Vendor</th>
              <th>Birthday</th>
              <th>Hometown</th>
              <th>Lang</th>
              <th>Timezone</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="kitts" phx-update="stream">
            <tr :for={{id, kitt} <- @streams.kitts} id={id}>
              <td>{kitt.name}</td>
              <td>{kitt.model}</td>
              <td>{kitt.vendor}</td>
              <td>{kitt.birthday}</td>
              <td>{kitt.hometown}</td>
              <td>{kitt.lang}</td>
              <td>{kitt.timezone}</td>
              <td>
                <div class="join">
                  <.link
                    patch={~p"/kitt-web/kitts/#{kitt}/edit"}
                    class="btn btn-sm btn-ghost join-item"
                  >
                    Edit
                  </.link>
                  <.link
                    phx-click={JS.push("delete", value: %{id: kitt.id}) |> hide("##{id}")}
                    data-confirm="Are you sure?"
                    class="btn btn-sm btn-ghost text-error join-item"
                  >
                    Delete
                  </.link>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <div class="drawer-side z-20">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu p-4 w-80 min-h-full bg-base-200 text-base-content">
      <li class="mb-4 text-lg font-bold px-4">KITT Agent</li>
      <li>
        <a href={~p"/kitt-web"}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            />
          </svg>
          Dashboard
        </a>
      </li>
      <li>
        <a class="active" href={~p"/kitt-web/kitts"}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
            />
          </svg>
          KITTs
        </a>
      </li>
      <li>
        <a>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            />
          </svg>
          Reports
        </a>
      </li>
      <div class="divider"></div>
      <li><a>Settings</a></li>
      <li><a href="https://github.com/kjsd/kitt_agent" target="_blank">Documentation</a></li>
    </ul>
  </div>
</div>

<.modal
  :if={@live_action in [:new, :edit]}
  id="kitt-modal"
  show
  on_cancel={JS.patch(~p"/kitt-web/kitts")}
>
  <.live_component
    module={KittAgentWeb.KittLive.FormComponent}
    id={@kitt.id || :new}
    title={@page_title}
    action={@live_action}
    kitt={@kitt}
    patch={~p"/kitt-web/kitts"}
  />
</.modal>
