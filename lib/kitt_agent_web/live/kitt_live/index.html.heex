<div class="drawer lg:drawer-open">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />

  <div class="drawer-content flex flex-col bg-base-100 min-h-screen">
    <!-- Navbar -->
    <div class="navbar bg-base-100 border-b border-base-200 w-full sticky top-0 z-10">
      <div class="flex-none lg:hidden">
        <label for="my-drawer" aria-label="open sidebar" class="btn btn-square btn-ghost">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block w-6 h-6 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            >
            </path>
          </svg>
        </label>
      </div>
      <div class="flex-1">
        <a class="btn btn-ghost text-xl">{@page_title}</a>
      </div>
    </div>
    
<!-- Content -->
    <main class="p-6">
      <.flash kind={:info} title="Success!" flash={@flash} />
      <.flash kind={:error} title="Error!" flash={@flash} />
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">Listing Kitts</h1>
        <.link patch={~p"/kitt-web/kitts/new"} class="btn btn-primary">New Kitt</.link>
      </div>

      <div class="overflow-x-auto card bg-base-100 shadow-xl">
        <table class="table table-zebra">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Lang</th>
              <th>Timezone</th>
              <th>Voice</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="kitts" phx-update="stream">
            <tr
              :for={{id, kitt} <- @streams.kitts}
              id={id}
              class="hover:bg-base-200 transition-colors"
            >
              <td phx-value-id={kitt.id} class="cursor-pointer font-mono text-xs text-zinc-500">
                {kitt.id}
              </td>
              <td phx-click="show_bio" phx-value-id={kitt.id} class="cursor-pointer">
                {kitt.name}
              </td>
              <td phx-click="show_bio" phx-value-id={kitt.id} class="cursor-pointer">
                {kitt.lang}
              </td>
              <td phx-click="show_bio" phx-value-id={kitt.id} class="cursor-pointer">
                {kitt.timezone}
              </td>
              <td>
                <%= if kitt.audio_path do %>
                  <audio src={kitt.audio_path} class="h-8 w-40" controls preload="none">
                    Your browser does not support the audio element.
                  </audio>
                <% else %>
                  <span class="text-zinc-400 italic text-sm">No sample</span>
                <% end %>
              </td>
              <td>
                <div class="join">
                  <div class="tooltip" data-tip="Edit">
                    <.link
                      patch={~p"/kitt-web/kitts/#{kitt}/edit"}
                      class="btn btn-sm btn-ghost join-item"
                      aria-label="Edit Kitt"
                    >
                      <.icon name="hero-pencil-square" class="size-4" />
                    </.link>
                  </div>
                  <div class="tooltip" data-tip="Delete">
                    <.link
                      phx-click={JS.push("delete", value: %{id: kitt.id}) |> hide("##{id}")}
                      data-confirm="Are you sure?"
                      class="btn btn-sm btn-ghost text-error join-item"
                      aria-label="Delete Kitt"
                    >
                      <.icon name="hero-trash" class="size-4" />
                    </.link>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <div class="drawer-side z-20">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu p-4 w-80 min-h-full bg-base-200 text-base-content">
      <li class="mb-4 text-lg font-bold px-4">KITT Agent</li>
      <li>
        <a href={~p"/kitt-web"}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            />
          </svg>
          Dashboard
        </a>
      </li>
      <li>
        <a class="active" href={~p"/kitt-web/kitts"}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
            />
          </svg>
          KITTs
        </a>
      </li>
      <li>
        <a href={~p"/kitt-web/activities"}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            />
          </svg>
          Activities
        </a>
      </li>
      <div class="divider"></div>
      <li>
        <a class="active" href={~p"/kitt-web/settings"}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
          Settings
        </a>
      </li>
      <li><a href="https://github.com/kjsd/kitt_agent" target="_blank">Documentation</a></li>
    </ul>
  </div>
</div>

<.modal
  :if={@live_action in [:new, :edit]}
  id="kitt-modal"
  show
  on_cancel={JS.patch(~p"/kitt-web/kitts")}
>
  <.live_component
    module={KittAgentWeb.KittLive.FormComponent}
    id={@kitt.id || :new}
    title={@page_title}
    action={@live_action}
    kitt={@kitt}
    patch={~p"/kitt-web/kitts"}
  />
</.modal>

<.modal
  :if={@live_action == :show_bio}
  id="kitt-bio-modal"
  show
  on_cancel={JS.patch(~p"/kitt-web/kitts")}
>
  <h2 class="text-lg font-bold mb-4">Biography for {@kitt.name}</h2>
  <div class="grid grid-cols-2 gap-4 mb-4 text-sm">
    <div><span class="font-semibold">Model:</span> {@kitt.biography.model || "-"}</div>
    <div><span class="font-semibold">Vendor:</span> {@kitt.biography.vendor || "-"}</div>
    <div><span class="font-semibold">Birthday:</span> {@kitt.biography.birthday || "-"}</div>
    <div><span class="font-semibold">Hometown:</span> {@kitt.biography.hometown || "-"}</div>
  </div>
  <div class="whitespace-pre-wrap">{@kitt.biography.personality}</div>
</.modal>
